

<table>
	<tr>
		<th>商品ID</th>
		<th>名前</th>
		<th>状態</th>
	</tr>

	<% @items.each do |item| %>
	<tr>
		<td><%= item.id %></td>
		<td><%= link_to "#{item.item_name}", admin_item_path(item) %></td>
		<td>
			<% if item.selling_status==true %>
				<p>販売中</p>
			<% else %>
				<P>売却済み</P>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>

