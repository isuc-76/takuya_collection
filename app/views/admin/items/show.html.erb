
<h2>商品詳細</h2>

<div class="col-xs-2">
<%= attachment_image_tag @item, :image, size: "200x200" %>
</div>

<div class="col-xs-6">
<table class="table table-bordered">
	<tr>
		<th>名前</th>
		<td><%= @item.item_name %></td>
	</tr>
	<tr>
		<th>説明</th>
		<td><%= @item.content %></td>
	</tr>
	<tr>
		<th>値段</th>
		<td><%= @item.price %></td>
	</tr>
	<tr>
		<th>状態</th>
		<td>
			<% if @item.selling_status==true %>
				<p>販売中</p>
			<% else %>
				<P>売却済み</P>
			<% end %>
		</td>
	</tr>
</table>

<%= link_to "編集", edit_admin_item_path(@item), class: "btn btn-success" %>

</div>
