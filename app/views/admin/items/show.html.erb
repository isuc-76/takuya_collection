

<table>
	<tr>
		<td><%= attachment_image_tag @item, :image, size: "200x200" %></td>
	</tr>
</table>

<table>
	<tr>
		<th>名前</th>
		<td><%= @item.item_name %></td>
	</tr>
	<tr>
		<th>説明</th>
		<td><%= @item.content %></td>
	</tr>
	<tr>
		<th>値段</th>
		<td><%= @item.price %></td>
	</tr>
	<tr>
		<th>状態</th>
		<td>
			<% if @item.selling_status==true %>
				<p>販売中</p>
			<% else %>
				<P>売却済み</P>
			<% end %>
		</td>
	</tr>
</table>

<%= link_to "編集", edit_admin_item_path(@item) %>
