
<% if @users.present? %>

<div class="admin_user_index">

<h2>会員一覧</h2>

<div class="col-xs-6">
<table class="table table-bordered">
	<tr>
		<th>会員ID</th>
		<th>名前</th>
		<th>ステータス</th>
	</tr>

	<% @users.each do |user| %>
	<tr>
		<td><%= user.id %></td>
		<td><%= link_to "#{user.name}", admin_user_path(user) %></td>
		<td>
			<% if user.user_status==true %>
				<p>有効</p>
			<% else %>
				<P>退会済み</P>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>

<div class="col-xs-6">
	<%= paginate (@users) %>
</div>

</div>

<% else %>

<h2>登録されている会員はいません</h2>

<% end %>


</div>