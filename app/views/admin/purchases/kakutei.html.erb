<% if @purchases.present? %>

<h2>購入確定商品一覧</h2>

<div class="col-xs-6">
<table class="table table-bordered">
	<tr>
		<th>商品画像</th>
		<th>名前</th>
		<th>状態</th>
	</tr>

	<% @purchases.each do |purchase| %>
	<tr>
		<td><%= attachment_image_tag purchase.item, :image, size: "100x100" %></td>
		<td><%= link_to "#{purchase.item.item_name}", admin_purchase_path(purchase) %></td>
		<td><%= purchase.transaction_status %></td>
	</tr>
	<% end %>
</table>

<div class="col-xs-6">
	<%= paginate (@purchases) %>
</div>

<% else %>

<h2>購入確定商品はありません</h2>

<% end %>
</div>

