

<h2>購入品詳細</h2>

<div class="col-xs-2">
	<%= attachment_image_tag @purchase.item, :image, size: "200x200" %>
</div>


<div class="col-xs-6">
<table class="table table-bordered">
	<tr>
		<th>名前</th>
		<td><%= @purchase.item.item_name %></td>
	</tr>
	<tr>
		<th>説明</th>
		<td><%= @purchase.item.content %></td>
	</tr>
	<tr>
		<th>値段</th>
		<td><%= @purchase.item.price %></td>
	</tr>
	<tr>
		<th>購入者</th>
		<td><%= @purchase.user.name %></td>
	</tr>

	<%= form_for(@purchase,url:admin_purchase_path(@purchase)) do |f| %>
	<tr>
		<th>送料</th>
		<td>
			<% if @purchase.derivery_price.present? %>
				<%= @purchase.derivery_price %>円<br>
				<%= f.text_field :derivery_price %>円
				<%# f.submit "更新", class: "btn btn-info" %>
			<% else %>
				未定<br>
				<%= f.text_field :derivery_price %>円
				<%= f.submit "更新", class: "btn btn-info" %>
			<% end %>
		</td>
	</tr>
		<th>状態</th>
		<td>
			<%= f.select :transaction_status, Purchase.transaction_statuses.keys, {} %>
			<%# f.submit "更新", class: "btn btn-info" %>
		</td>
	</tr>
</table>

<%= f.submit "更新", class: "btn btn-info" %>
	<% end %>

</div>

