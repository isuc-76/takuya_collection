
<h2>商品詳細</h2>

<div class="col-xs-2">
	<div><%= attachment_image_tag @item, :image, size: "200x200" %></div>
</div>

<div class="col-xs-6">
<table class="table table-bordered">
	<tr>
		<th>名前</th>
		<td><%= @item.item_name %></td>
	</tr>
	<tr>
		<th>説明</th>
		<td><%= @item.content %></td>
	</tr>
	<tr>
		<th>値段</th>
		<td><%= @item.price %>円</td>
	</tr>
</table>

<% if user_signed_in? %>


<div class="kounyu">
	<%= link_to "購入", new_user_purchase_path(@item), class: "btn btn-info" %>
</div>
<% else %>
<% end %>


</div>

