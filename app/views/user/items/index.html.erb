
<h2>商品一覧</h2>

<div class="col-xs-6">
<% if @items.present? %>

<table class="table table-bordered">
	<tr>
		<th>商品画像</th>
		<th>名前</th>
	</tr>

	<% @items.each do |item| %>
	<tr>
		<td><%= attachment_image_tag item, :image, size: "100x100" %></td>
		<td><%= link_to "#{item.item_name}", user_item_path(item) %></td>
	</tr>
	<% end %>
</table>

<% else %>

<h2>出品中の商品はありません</h2>

<% end %>
</div>


