

<div class="mypege">

<%= render "shared/error_messages", model: @user %>

<h2>登録情報変更</h2>
<div class="col-xs-6">

<%= form_for(@user,url:user_user_path(@user)) do |f| %>
	<table class="table table-bordered">
		<tr>
			<th>名前</th>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<th>電話番号</th>
			<td><%= f.text_field :telephone_number %></td>
		</tr>
		<tr>
			<th>郵便番号</th>
			<td><%= f.text_field :postal_code %></td>
		</tr>
		<tr>
			<th>住所</th>
			<td><%= f.text_area :address %></td>
		</tr>
		<tr>
			<th>メールアドレス</th>
			<td><%= f.text_area :email %></td>
		</tr>
	</table>
	<%= f.submit "更新", class: "btn btn-info" %>
<% end %>
</div>

</div>

